{
  "swagger": "2.0",
  "info": {
    "description": "Administration Portal",
    "version": "1.0.0",
    "title": "Administration Portal"
  },
  "paths": {
    "/health": {
      "get": {
        "tags": ["health"],
        "summary": "Checks health of api",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Successful retrieval",
            "schema": {
              "$ref": "#/definitions/response"
            }
          },
          "500": {
            "description": "Error",
            "schema": {
              "$ref": "#/definitions/errorResponse"
            }
          }
        }
      }
    },
    "/example": {
      "get": {
        "tags": ["example"],
        "summary": "hello world example api call",
        "produces": ["text/plain"],
        "responses": {
          "200": {
            "description": "Successful retrieval"
          },
          "500": {
            "description": "Error",
            "schema": {
              "$ref": "#/definitions/errorResponse"
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/error": {
      "get": {
        "tags": ["error"],
        "summary": "throws internal error for test purposes",
        "produces": ["text/plain"],
        "responses": {
          "500": {
            "description": "Error",
            "schema": {
              "$ref": "#/definitions/errorResponse"
            }
          }
        }
      }
    },
    "/example-authenticated": {
      "get": {
        "tags": ["example-authenticated"],
        "summary": "hello world example api call with authentication",
        "produces": ["text/plain"],
        "responses": {
          "200": {
            "description": "Successful retrieval"
          },
          "401": {
            "description": "Authorization header missing"
          },
          "403": {
            "description": "Authorization key invalid"
          },
          "500": {
            "description": "Error",
            "schema": {
              "$ref": "#/definitions/errorResponse"
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "errorResponse": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "description": "error message"
        }
      }
    },
    "response": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Version number"
        },
        "description": {
          "type": "string",
          "description": "Describes the component"
        },
        "status": {
          "type": "string",
          "description": "Tells you if the service is running"
        },
        "node_env": {
          "type": "string",
          "description": "Environment - local, dev etc."
        }
      }
    }
  }
}
